<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uk.ac.tees.com2060.froyo.AddListingFragment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editText_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Item name"
            />

        <EditText
            android:id="@+id/editText_item_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Item weight"/>

        <EditText
            android:id="@+id/editText_from_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Pickup Location"/>

        <Button
            android:id="@+id/button_from_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Location"/>

        <EditText
            android:id="@+id/editText_to_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Delivery Location"/>

        <Button
            android:id="@+id/button_to_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Location"/>



    </LinearLayout>
</FrameLayout>
